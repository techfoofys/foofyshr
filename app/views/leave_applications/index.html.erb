<p id="notice"><%= notice %></p>

<h1>Leave Applications</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Reason</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leave_applications.each do |leave_application| %>
      <tr>
        <td><%= leave_application.from %></td>
        <td><%= leave_application.to %></td>
        <td><%= leave_application.reason %></td>
        <td><%= leave_application.status %></td>
        <td><%= leave_application.user %></td>
        <td><%= link_to 'Show', leave_application %></td>
        <td><%= link_to 'Edit', edit_leave_application_path(leave_application) %></td>
        <td><%= link_to 'Destroy', leave_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

