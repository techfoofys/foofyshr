
<%#= render "devise/shared/links" %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 log_in_box well">
    <div class="frm_header">Sign Up</div>
    <div class="frm_header_text"> Lorem ipsum dolor sit amet, consectetur adipiscing elit </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ,:html => { class: "frm_login"})  do |f| %>
      <%= devise_error_messages! %>
      <br>
      <div class="form-group">
        <%= f.label "Enter Your Fullname" , class: "text-uppercase" %>
        <%= f.text_field :name, class: 'frm_input form-control' %>
      </div>

      <div class="form-group">
        <%= f.label "Email Address" , class: "text-uppercase" %>
        <%= f.email_field :email, class: 'frm_input form-control' %>
      </div>

      <div class="form-group">
        <%= f.label "Create Password" , class: "text-uppercase" %>
        <%= f.password_field :password, autocomplete: "off", class: 'frm_input form-control' %>
        <% if @validatable %>
          <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation , class: "text-uppercase" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'frm_input form-control' %>
      </div>

      <br>
      <div class="actions">
        <%= f.submit("Sign up" , class: "btn btn-primary") %>
      </div>
    <% end %>


    <!-- <%#= render "devise/shared/links" %> -->
  </div>
</div>


